@model CreateAnimalViewModel
@{
	ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Animal.AnimalId" />
			<input type="hidden" asp-for="Animal.PhotoUrl" />
			<div class="form-group my-3">
				<img src="~/Images/@Model.Animal.PhotoUrl" />
			</div>
			<div class="form-group my-3">
				<label asp-for="ImageFile" class="control-label">Choose file</label>
				<input class="form-control" type="file" asp-for="ImageFile" placeholder="@Model.Animal.PhotoUrl">
				<span asp-validation-for="ImageFile" class="text-danger"></span>
			</div>
			<div class="form-group my-3">
				<label asp-for="Animal.Name" class="control-label"></label>
				<input asp-for="Animal.Name" class="form-control" />
				<span asp-validation-for="Animal.Name" class="text-danger"></span>
			</div>
			<div class="form-group my-3">
				<label asp-for="Animal.Age" class="control-label"></label>
				<input asp-for="Animal.Age" type="date" class="form-control" />
				<span asp-validation-for="Animal.Age" class="text-danger"></span>
			</div>
			<div class="form-group my-3">
				<label asp-for="Animal.Description" class="control-label"></label>
				<textarea asp-for="Animal.Description" class="form-control"></textarea>
				<span asp-validation-for="Animal.Description" class="text-danger"></span>
			</div>
			<div class="form-group my-3">
				<label asp-for="Animal.CategoryId" class="control-label"></label>
				<select asp-for="Animal.CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
				<span asp-validation-for="Animal.CategoryId" class="text-danger"></span>
			</div>

			<div class="form-group my-3">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}