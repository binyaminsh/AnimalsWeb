
@if (User.Identity.IsAuthenticated)
					{
						using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
						{
							@Html.AntiForgeryToken()

							<ul class="nav navbar-nav navbar-right">
								<li class="nav-item">
									<form class="form-inline" asp-area="Identity" asp-page="/Users/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
										<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
									</form>
								</li>
							</ul>
						}
					}
					else
					{
						<ul class="nav navbar-nav navbar-right">
							<li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", null, new {@class="nav-link text-dark", id = "loginLink"})</li>
						</ul>
					}
